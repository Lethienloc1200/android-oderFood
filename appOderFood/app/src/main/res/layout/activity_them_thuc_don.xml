<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/xanh"
    android:orientation="vertical"
    tools:context=".ThemThucDonActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/tenmonan">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtTenMonAnLoaiTD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/tenmonan"
                android:inputType="textPersonName"
                android:textColor="#FF5722"
                android:textColorHint="#FF5722"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtGiaTienLoaiTD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/giatien"
                android:inputType="number"
                android:textColor="#FF5722"
                android:textColorHint="#FF5722"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spiner_loaiThucDon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#92704343"
                    android:dropDownWidth="wrap_content">

                </Spinner>

                <ImageButton
                    android:id="@+id/imageThemLoaiThucDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewHinhAnhTD"
            android:layout_width="400dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:src="@drawable/backgroundheader1">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/them" />

        <Button
            android:id="@+id/btnThoat_monAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/thoat" />
    </LinearLayout>


</LinearLayout>